{
    "editor.fontSize": 22,
    "php.suggest.basic": false,
    "editor.quickSuggestions": {
        "comments": true
    },
    "files.associations": {
        "*.html": "twig"
    },
    "emmet.includeLanguages": {
        "twig": "html"
    },
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/vendor/**/{Tests,tests}/**/*Test.php",
        "**/.history/**",
        "**/vendor/**/vendor/**",
        "**/app/**/cache/**",
    ]
}